---
import {Search} from '@lucide/astro'
---

<header class="fixed w-full bg-white/80 backdrop-blur-sm z-50 top-0">
  <div class="max-w-8xl mx-auto px-4 sm:px-6">
    <div class="flex justify-between items-center py-4">
      
      <!-- Logo -->
      <div class="flex items-center flex-shrink-0">
        <a href="/" class="text-xl font-bold">
          iPhone Blog
        </a>
      </div>

      <!-- Navegación Desktop -->
      <nav class="hidden md:flex items-center space-x-8">
        <a href="#" class="text-black">Reviews</a>
        <a href="#" class="text-black">Trucos</a>
        <a href="#" class="text-black">Apps</a>
        <a href="#" class="text-black">Accesorios</a>
        <a href="#" class="text-black">Noticias</a>
      </nav>
      <div class="hidden md:flex items-center space-x-8">
        <button class="text-gray-700">
          <Search />
        </button>
        <a href="#" class="px-4 py-2 bg-black text-white rounded-lg">Suscribirse</a>
      </div>

      <!-- Navegación Mobile -->
      <div class="flex items-center space-x-4 md:hidden">
        <!-- Lupa -->
        <button class="text-gray-700">
          <Search />
        </button>
        <!-- Botón Suscribirse -->
        <a href="#" class="px-3 py-2 bg-black text-white rounded-lg text-sm">
          Suscribirse
        </a>
      </div>

    </div>
  </div>
</header>
